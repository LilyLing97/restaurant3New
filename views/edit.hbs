<div class="container">

  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class="mb-3">
      <input type="checkbox" name="isDone" {{#if restaurant.isDone}} checked {{/if}}>請問喜歡這間餐廳嗎？
    </div>

    <div class="mb-3">
      <input type="text" placeholder="name" name="name" value="{{restaurant.name}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="name_en" name="name_en" value="{{restaurant.name_en}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="category" name="category" value="{{restaurant.category}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="image" name="image" value="{{restaurant.image}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="location" name="location" value="{{restaurant.location}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="phone" name="phone" value="{{restaurant.phone}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="google_map" name="google_map" value="{{restaurant.google_map}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="rating" name="rating" value="{{restaurant.rating}}">
    </div>

    <div class="mb-3">
      <input type="text" placeholder="description" name="description" value="{{restaurant.description}}">
    </div>

    <button type="submit">edit</button>
    <a href="/">back</a>
  </form>

</div>